<div class="mt-20 flex flex-col justify-center items-center">
    <%= form_with url: login_path do |f| %>
        <%= f.password_field :password,
        class: "px-4 py-2 text-lg rounded-lg" %>

        <div class="my-5 flex justify-center">
            <%= f.submit "Log In",
            class: "text-lg font-bold px-8 py-4 rounded-lg shadow bg-blue-500 hover:bg-blue-600 transition text-white cursor-pointer"%>
        </div>
    <% end %>
</div>
