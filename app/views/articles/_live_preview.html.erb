<div class="flex" data-controller="live-preview">
    <div class="w-1/2">
        <%= render "form" %>
    </div>
    <div class="w-1/2 p-4">
        <h3 class="block uppecase tracking-wide bg-slate-600 text-white font-bold px-4">
            Live Preview
        </h3>
        <div class="bg-white py-8 px-4">
            <div data-live-preview-target="preview" class="prose prose-sm mx-auto prose-a:text-blue-600 prose-a:underline">
                <%#= markdown(@article.body) %>
            </div>
        </div>
    </div>
</div>
