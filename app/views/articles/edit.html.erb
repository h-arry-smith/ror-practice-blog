<h2 class="text-4xl font-extrabold border-b border-slate-600 pb-4">
    Edit a Post
</h2>

<p class="uppercase font-semibold ml-4 mt-2">Tags</p>
<div class="flex space-x-4 my-2">
    <%= render partial: "admin/tag", collection: @article.tags, locals: {article: @article} %>
</div>

<%= form_with url: article_tags_path(@article), method: :post do |f| %>
    <%= render partial: "shared/errors", locals: { model: @article } %>

    <div class="flex w-max">
        <%= f.text_field :tag, class: "input-field" %>
        <%= f.submit "Add", class: "order-last ml-4 bg-slate-700 hover:bg-slate-600 font-bold transition px-4 rounded" %>
    </div>
<% end %>

<div class="my-6">
    <%= render "live_preview" %>
</div>
